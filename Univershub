-- Encoded URL and Game ID
local gameScripts = {
    [100902716985467] = "https://raw.githubusercontent.com/lumecraftor/Scriptupdates/refs/heads/main/Bee%20Master%20Simulator=" -- Encoded URL
}

-- Base64 Decoder
local function decodeURL(encoded)
    return game:GetService("HttpService"):JSONDecode('["' .. encoded .. '"]')[1]
end

-- Check if the game matches
local gameId = game.PlaceId
local scriptURL = gameScripts[gameId] and decodeURL(gameScripts[gameId])

if scriptURL then
    game:GetService("StarterGui"):SetCore("SendNotification", {
        Title = "Univers Hub Notification",
        Text = "Game found! The script is loading.",
        Duration = 5
    })
    local success, errorMsg = pcall(function()
        loadstring(game:HttpGet(scriptURL))()
    end)
    if not success then
        game:GetService("StarterGui"):SetCore("SendNotification", {
            Title = "Error",
            Text = "Failed to load the script.",
            Duration = 5
        })
        warn("Script Error: " .. errorMsg)
    end
else
    game:GetService("StarterGui"):SetCore("SendNotification", {
        Title = "Error",
        Text = "Game script not found in the list.",
        Duration = 5
    })
end
