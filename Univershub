-- Game list with Game IDs (PlaceIds) and corresponding script URLs
local gameScripts = {
    [100902716985467] = "https://raw.githubusercontent.com/lumecraftor/Scriptupdates/refs/heads/main/Bee%20Master%20Simulator", -- Bee Master Simulator
}

-- Check if the current game is in the list
local gameId = game.PlaceId
local scriptURL = gameScripts[gameId]

if scriptURL then
    -- Notify the player
    game:GetService("StarterGui"):SetCore("SendNotification", {
        Title = "Univers Hub Notification",
        Text = "Game found! The script is loading.",
        Duration = 5
    })
    
    -- Load and execute the script
    local success, result = pcall(function()
        local response = game:HttpGet(scriptURL)
        loadstring(response)()
    end)
    
    if not success then
        -- If there was an error loading the script
        game:GetService("StarterGui"):SetCore("SendNotification", {
            Title = "Error",
            Text = "Failed to load the script. Error: " .. tostring(result),
            Duration = 5
        })
        warn("Error loading script: " .. tostring(result))
    end
else
    -- If the game is not found in the list
    game:GetService("StarterGui"):SetCore("SendNotification", {
        Title = "Error",
        Text = "Game script not found in the list.",
        Duration = 5
    })
end
